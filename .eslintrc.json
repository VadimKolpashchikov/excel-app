{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "jest"
    ],
    "rules": {
        "max-len": [
            2,
            {
                "code": 100,
                "comments": 100
            }
        ],
        "linebreak-style": 0,
        "no-console": 1,
        "import/no-unresolved": 0,
        "no-debugger": 0,
        "no-plusplus": [
            2,
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "no-use-before-define": [
            2,
            {
                "functions": false
            }
        ],
        "no-param-reassign": [
            2,
            {
                "props": false
            }
        ]
    },
    "settings": {
        "import/resolver": {
            "alias": true
        }
    }
}