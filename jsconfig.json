{
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@core/*": [
                "./src/core/*"
            ],
            "@const/*": [
                "./src/const/*"
            ],
            "@router/*": [
                "./src/router/*"
            ],
            "@store": [
                "./src/store/*"
            ],
            "@storage": [
                "./src/storage/*"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@/*": [
                "./src/*"
            ]
        },
    },
    "exclude": [
        "node_modules",
        "dist",
        ".git"
    ]
}